<h2 class="title"><%= title %></h2>

<form action="/admin/products/<%= product._id %>/edit" method="POST" enctype="multipart/form-data" class="form-container">

  <div class="form-group">
    <label for="name">Tên:</label>
    <input type="text" name="name" id="name" value="<%= product.name %>" required>
  </div>

  <div class="form-group">
    <label for="price">Giá:</label>
    <input type="number" name="price" id="price" value="<%= product.price %>" required>
  </div>

  <div class="form-group">
    <label for="category">Danh mục:</label>
    <input type="text" name="category" id="category" value="<%= product.category %>">
  </div>

  <div class="form-group">
    <label for="description">Mô tả:</label>
    <textarea name="description" id="description"><%= product.description %></textarea>
  </div>

  <% if (product.image) { %>
    <div class="form-group">
      <label>Ảnh hiện tại:</label><br>
      <img src="/uploads/<%= product.image %>" width="150" style="object-fit: cover; border-radius: 8px;">
    </div>
  <% } %>

  <div class="form-group">
    <label for="image">Ảnh mới:</label>
    <input type="file" name="image" id="image">
  </div>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a href="/" class="btn btn-secondary">Huỷ</a>
  </div>
</form>
