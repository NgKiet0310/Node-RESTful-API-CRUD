<h2>Thêm sản phẩm mới</h2>

<form action="/admin/products/add" method="POST" enctype="multipart/form-data" class="product-form" id="productForm">
    <label for="name">Tên sản phẩm:</label>
    <input type="text" name="name" required><br>

    <label for="price">Giá (VNĐ):</label>
    <input type="number" name="price" required><br>

    <label for="category">Danh mục:</label>
    <input type="text" name="category"><br>

    <label for="description">Mô tả:</label>
    <textarea name="description" rows="3"></textarea><br>

    <label for="image">Ảnh sản phẩm:</label>
    <input type="file" name="image" accept="image/*"><br><br>

    <button type="submit">Thêm sản phẩm</button>
</form>

<script>
    // JS validation (bổ sung nếu bạn muốn thêm logic nâng cao)
    const form = document.getElementById('productForm');
    form.addEventListener('submit', function (e) {
        const name = form.name.value.trim();
        const price = parseFloat(form.price.value);

        if (name.length < 2) {
            alert('Tên sản phẩm phải có ít nhất 2 ký tự.');
            e.preventDefault();
            return;
        }

        if (isNaN(price) || price < 0) {
            alert('Giá sản phẩm không hợp lệ.');
            e.preventDefault();
            return;
        }
    });
</script>
